@using ECommerce.Application.DTOs.Account
@model RegisterDto

@{
    ViewData["Title"] = "Yeni Hesap Oluştur"; // Başlığı daha açıklayıcı yaptım
    Layout = "_Layout"; // Opsiyonel: Eğer farklı bir layout kullanmak isterseniz
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    /* Genel Stil İyileştirmeleri */
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #e9ecef; /* Hafif gri bir arka plan */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Sayfanın tamamını kapla */
        margin: 0;
    }

    .register-container {
        max-width: 500px; /* Formun maksimum genişliği */
        background-color: #fff;
        padding: 0; /* Padding'i card-body'ye taşıdık */
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Daha belirgin gölge */
        animation: fadeInDown 0.8s ease-out; /* Kart girişi animasyonu */
        overflow: hidden; /* Köşelerin düzgün görünmesi için */
    }

        .register-container .card-header {
            background: linear-gradient(45deg, #007bff, #0056b3); /* Gradyan arka plan */
            color: #fff;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            padding: 30px 20px;
            font-weight: 700;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2); /* Hafif gölge */
        }

            .register-container .card-header i {
                font-size: 2.2rem;
                margin-right: 15px;
            }

        .register-container .card-body {
            padding: 40px;
        }

    h2 {
        font-weight: 700;
        color: #fff;
        margin-bottom: 0;
    }

    /* Form Grupları */
    .mb-3 {
        margin-bottom: 20px !important;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border-radius: 10px; /* Yuvarlak input alanları */
        padding: 12px 15px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

    /* Buton Stilleri */
    .btn-primary {
        background-color: #28a745; /* Yeşil tonlarında */
        border-color: #28a745;
        transition: all 0.3s ease;
        border-radius: 25px; /* Daha yuvarlak buton */
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%; /* Tam genişlik */
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px); /* Hafif yukarı kayma */
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
        }

    /* Link Stilleri */
    .text-center p {
        margin-top: 25px;
        color: #555;
    }

        .text-center p a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .text-center p a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

    .text-danger {
        font-size: 0.9em;
        margin-top: 5px;
        display: block; /* Hata mesajlarının ayrı satırda olması için */
    }
</style>

<div class="register-container card shadow-sm">
    <div class="card-header text-center animate__animated animate__fadeInDown">
        <i class="bi bi-person-plus"></i>
        <h2>Yeni Hesap Oluştur</h2>
    </div>
    <div class="card-body p-4 animate__animated animate__fadeInUp">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3 animate__animated animate__shakeX"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Şifrenizi oluşturun" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Şifrenizi tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg animate__animated animate__bounceIn">
                    <i class="bi bi-person-check me-2"></i> Kayıt Ol
                </button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p>Zaten bir hesabınız var mı? <a asp-action="Login"><i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}