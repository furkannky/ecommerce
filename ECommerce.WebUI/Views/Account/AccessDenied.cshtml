@{
    ViewData["Title"] = "Yetkisiz Erişim!"; // Daha etkileyici bir başlık
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    /* Genel Stil İyileştirmeleri */
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f8f9fa; /* Hafif bir arka plan rengi */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Sayfanın tamamını kapla */
        margin: 0;
        text-align: center;
    }

    .error-container {
        max-width: 600px;
        background-color: #fff;
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-out; /* Genel giriş animasyonu */
    }

    h1 {
        font-weight: 700;
        color: #dc3545; /* Kırmızı renk */
        margin-bottom: 20px;
        font-size: 3rem; /* Daha büyük başlık */
        animation: shakeX 1s ease-out; /* Sallanma animasyonu */
    }

    .icon-large {
        font-size: 5rem; /* İkonu daha büyük yap */
        color: #dc3545;
        margin-bottom: 30px;
        animation: pulse 1.5s infinite ease-in-out; /* İkon için canlı animasyon */
    }

    p {
        font-size: 1.2rem;
        color: #6c757d; /* Gri ton */
        margin-bottom: 30px;
        animation: fadeInUp 1.2s ease-out; /* Paragraf animasyonu */
    }

    .btn-home {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 15px 35px;
        border-radius: 30px; /* Daha yuvarlak buton */
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        animation: zoomIn 1.5s ease-out; /* Buton animasyonu */
    }

        .btn-home:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-3px); /* Hafif yukarı kayma */
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.4);
        }
</style>

<div class="error-container">
    <i class="bi bi-person-slash icon-large animate__animated"></i> <h1 class="text-danger animate__animated">Yetkisiz Erişim!</h1>
    <p class="animate__animated">
        Üzgünüz, bu sayfaya erişim yetkiniz bulunmamaktadır. Lütfen doğru yetkilere sahip bir hesapla giriş yaptığınızdan emin olun veya yöneticinizle iletişime geçin.
    </p>
    <p class="animate__animated">
        <a asp-controller="Home" asp-action="Index" class="btn btn-home animate__animated">
            <i class="bi bi-house-door me-2"></i> Ana Sayfaya Dön
        </a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}