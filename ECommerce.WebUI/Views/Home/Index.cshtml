@model IEnumerable<ECommerce.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Ana Sayfa - Dijital Alışveriş Deneyimi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    /* Özel CSS Stilleri */
    .jumbotron-fluid {
        background: linear-gradient(135deg, #e0f2f7, #90caf9); /* Açık maviden orta maviye gradyan */
        color: #333;
        padding-top: 80px;
        padding-bottom: 80px;
        position: relative; /* Arka plan animasyonu için */
        overflow: hidden; /* Taşmaları engelle */
    }

        .jumbotron-fluid::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50px;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
            animation: rotateBg 20s linear infinite;
            opacity: 0.6;
        }



    .jumbotron-fluid h1 {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.15);
        margin-bottom: 20px;
    }

    .jumbotron-fluid p.lead {
        font-size: 1.3rem;
        margin-bottom: 30px;
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 1.1rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            border-color: #545b62;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
        }

    .card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

    .card-img-top {
        height: 220px;
        object-fit: contain;
        padding: 15px;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        background-color: #f8f9fa;
        transition: filter 0.3s ease;
    }

    .card:hover .card-img-top {
        filter: brightness(1.05);
    }

    .card-body {
        padding: 20px;
    }

    .card-title a {
        font-weight: 600;
        font-size: 1.15rem;
        color: #343a40;
        transition: color 0.2s ease;
    }

        .card-title a:hover {
            color: #007bff;
            text-decoration: none;
        }

    .card-text strong {
        font-size: 1.25rem;
        color: #28a745;
    }

    .btn-success {
        border-radius: 20px;
        padding: 8px 18px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
        }

    .category-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .category-card .card-body {
            padding: 25px;
        }

        .category-card i {
            font-size: 3.5rem;
            margin-bottom: 20px;
            transition: color 0.3s ease;
        }

        .category-card:hover i.bi-phone {
            color: #0056b3 !important;
        }

        .category-card:hover i.bi-bag {
            color: #1e7e34 !important;
        }

        .category-card:hover i.bi-house {
            color: #d39e00 !important;
        }

        .category-card .btn-outline-primary,
        .category-card .btn-outline-success,
        .category-card .btn-outline-warning {
            border-radius: 20px;
            padding: 8px 20px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .category-card .btn-outline-primary:hover,
            .category-card .btn-outline-success:hover,
            .category-card .btn-outline-warning:hover {
                transform: scale(1.05);
            }

    .blog-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .blog-card-img-top {
        height: 180px;
        object-fit: cover;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .blog-card .card-title {
        font-weight: 600;
        font-size: 1.1rem;
        color: #343a40;
    }

    .blog-card .btn-outline-primary,
    .blog-card .btn-outline-success,
    .blog-card .btn-outline-warning {
        border-radius: 20px;
        padding: 8px 20px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .blog-card .btn-outline-primary:hover,
        .blog-card .btn-outline-success:hover,
        .blog-card .btn-outline-warning:hover {
            transform: scale(1.05);
        }
</style>

<div class="jumbotron jumbotron-fluid text-center animate__animated animate__fadeInDown">
    <div class="container">
        <h1 class="display-4">Dijital Alışveriş Arenasına Hoş Geldiniz!</h1>
        <p class="lead">Aradığınız her şeyi tek bir yerde bulun. En yeni ürünler, harika fırsatlar ve daha fazlası sizi bekliyor.</p>
        <hr class="my-4">
        <p>Alışverişe başlamak için aşağıdaki ürünlere göz atın veya kategorilerimizi keşfedin.</p>
        <a class="btn btn-primary btn-lg animate__animated animate__pulse animate__infinite" asp-controller="Product" asp-action="Index">Tüm Ürünleri Keşfet</a>
        <a class="btn btn-secondary btn-lg animate__animated animate__pulse animate__infinite" asp-controller="Category" asp-action="Index">Kategorilere Göz At</a>
    </div>
</div>

---

<div class="container my-5">
    <h2 class="text-center mb-5 animate__animated animate__fadeInUp">Öne Çıkan Ürünler</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animate__animated animate__zoomIn" style="animation-delay: @((0.1 * (Model.ToList().IndexOf(product) % 4)).ToString("0.0"))s;">
                    <div class="card h-100 shadow-sm">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                            @if (product.ProductImages != null && product.ProductImages.Any())
                            {
                                <img src="@product.ProductImages.FirstOrDefault()?.ImagePath" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/220x220?text=Resim+Yok" class="card-img-top" alt="Resim Yok">
                            }
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="text-decoration-none">@product.Name</a>
                            </h5>
                            <p class="card-text text-muted text-center flex-grow-1">
                                <small>@product.CategoryName</small><br />
                                <strong>@product.Price.ToString("C2")</strong>
                            </p>
                            <div class="d-flex justify-content-center align-items-center mt-auto">
                                <form asp-action="AddToCart" asp-controller="Product" method="post">
                                    <input type="hidden" name="ProductId" value="@product.Id" />
                                    <input type="hidden" name="Quantity" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm animate__animated animate__bounceIn">
                                        <i class="bi bi-cart-plus"></i> Sepete Ekle
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center animate__animated animate__fadeIn">
                <p class="text-muted">Şu anda öne çıkan ürün bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>

